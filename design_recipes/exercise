        # fails if task does not exist
    end
        

## 3.

```ruby
# 1
taskTracker = TaskTracker.new
taskTracker.list_of_todos # => []

# 2
taskTracker = TaskTracker.new
taskTracker.add("shopping")
taskTracker.list_of_todos # => ["shopping]
taskTracker.add("cleaning")
taskTracker.list_of_todos # => "shopping", "cleaning"

# 3
taskTracker = TaskTracker.new
taskTracker.add("shopping")
taskTracker.list_of_todos # => ["shopping]
taskTracker.add("cleaning")
taskTracker.list_of_todos # => "shopping", "cleaning"
taskTracker.complete("shopping")
taskTracker.list_of_todos # => "cleaning"

# 4
taskTracker = TaskTracker.new
taskTracker.add("shopping")
taskTracker.list_of_todos # => ["shopping]
taskTracker.add("cleaning")
taskTracker.list_of_todos # => "shopping", "cleaning"
taskTracker.complete("dusting")
taskTracker.list_of_todos # fails
```

